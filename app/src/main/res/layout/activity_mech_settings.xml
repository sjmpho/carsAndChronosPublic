<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_height="match_parent"
    tools:context=".Mechanic_Activities.Mech_SettingsActivity">
    <TextView
        android:textColor="@color/Gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textStyle="bold"
        android:id="@+id/text"
        android:textSize="35dp"/>
    <LinearLayout
        android:layout_below="@id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <TextView
            android:textColor="@color/Gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:textStyle="bold"
            android:id="@+id/Settings_Name"
            android:textSize="25dp"/>
        <TextView
            android:textColor="@color/Gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last name : "
            android:textStyle="bold"
            android:id="@+id/Settings_LastName"
            android:textSize="25dp"/>
        <TextView
            android:textColor="@color/Gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Role : "
            android:textStyle="bold"
            android:id="@+id/Settings_Role"
            android:textSize="25dp"/>
        <TextView
            android:textColor="@color/Gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email : "
            android:textStyle="bold"
            android:id="@+id/Settings_Email"
            android:textSize="25dp"/>
        <TextView
            android:textColor="@color/Gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cell number : "
            android:textStyle="bold"
            android:id="@+id/Settings_number"
            android:textSize="25dp"/>
        <LinearLayout
            android:textColor="@color/Gold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/Gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave status : "
                android:textStyle="bold"
                android:layout_weight="70"
                android:id="@+id/Settings_LeaveStatus"
                android:textSize="25dp"/>
            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_weight="30"
                android:layout_marginEnd="30dp"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:id="@+id/Settings_leave_status_switch"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>