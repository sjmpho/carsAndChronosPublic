<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/secoundary_background_black"
        android:layout_width="match_parent"
        app:strokeColor="@color/Gold"
        app:strokeWidth="2dp"
        app:cardCornerRadius="15dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/notfication_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Gold"
                    android:textSize="25dp"
                    android:text="Type : General"/>


                <TextView
                    android:id="@+id/Notification_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Gold"
                    android:textSize="25dp"
                    android:text="Request Status: inShop"/>

                <TextView
                    android:gravity="end"
                    android:id="@+id/date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Gold"
                    android:textSize="15dp"
                    android:text="10:30 2024/09/17"/>
            </LinearLayout>

        </RelativeLayout>




    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>