<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_picture"
    tools:context=".Mechanic_Activities.Mech_Notifications"
    android:padding="16dp">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_background"
        android:onClick="Back_btn_notifications"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_arrow_back_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="35dp"
        android:textColor="@color/Gold"
        android:layout_centerHorizontal="true"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rec_notificfations"
        android:layout_below="@id/btn_background"/>

<androidx.cardview.widget.CardView
    android:elevation="10dp"
    android:layout_margin="14dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:backgroundTint="@color/Gold"
    android:layout_width="70dp"
    app:cardCornerRadius="25dp"
    android:layout_height="70dp">
    <ImageButton
        android:id="@+id/btn_note"
        android:onClick="btn_to_note"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_chat_24"/>

</androidx.cardview.widget.CardView>



</RelativeLayout>
